<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mobi.dzs.android.BluetoothSPP"
    android:versionCode="8"
    android:versionName="1.8" >

    <uses-sdk
        android:minSdkVersion="6"
        android:targetSdkVersion="10" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <activity
            android:name="mobi.dzs.android.BluetoothSPP.actMain"
            android:label="@string/app_name_actMain"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="mobi.dzs.android.BluetoothSPP.actDiscovery"
            android:label="@string/app_name_actDiscovery"
            android:screenOrientation="portrait" />
        <activity
            android:name="mobi.dzs.android.BluetoothSPP.actKeyBoard"
            android:label="@string/app_name_actKeyBoard"
            android:screenOrientation="portrait" />
    </application>

</manifest>